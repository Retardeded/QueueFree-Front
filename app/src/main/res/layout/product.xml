<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:maxWidth="150dp"
        android:text="afle extra cienkie z kaszy gryczanej z chia (szałwia hiszpańska) i solą morską 27 g"
        />

    <TextView
        android:id="@+id/productQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textSize="12sp"
        android:text="afle extra cienkie z kaszy gryczanej z chi extra cienkie z kaszy gryca (szałwia hiszpańska) i solą morską 27 g"
        />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/productCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="afle extra cienkie z kaszy gryczanej z chia (szałwia hiszpańska) i solą morską 27 g"
        />


</LinearLayout>